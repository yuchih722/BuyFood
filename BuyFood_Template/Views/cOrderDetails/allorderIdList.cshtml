        $.ajax({
            url: "/cOrderDetails/cOrderDetailsJson",
            type: "get",
            data: { "id": orid },
            success: function (data) {
               /* console.log(data)*/
              
                var txttable = "";
                var shobtn = "";

                txttable +=
                    `<div id="orderlist">
                            <table class="table table-hover table_striped table-bordered border" id="myTable">
                            <thead>
                            <tr>
