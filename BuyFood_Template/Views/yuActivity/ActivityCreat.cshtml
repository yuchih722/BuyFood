@{
    Layout = "_LayoutAd";
}
@model BuyFood_Template.ViewModels.yuActivityViewModel

<div style="background-color:#ffffff ;margin:auto;margin-top:100px;width:1000px">

    <h1 align=" center">新增活動</h1>
    <hr />

    <form asp-action="ActivityCreat" method="post" enctype="multipart/form-data">
        <div class="form-group" style="text-align: center;"><input style="font-size: 25px;padding: 5px;width:550px" placeholder="活動名稱" required name="CActivityName" /></div>
        <div class="form-group" style="text-align: center;" id="_imgClick">
            <img class="upload" id="_imgCgang" src="#" width="600" height="300" onclick="go()" />
            <input type="file" id="abc" class="addfile-btn" accept="image/gif, image/jpeg, image/png" style="display:none" onchange="readURL(this)" name="img" />
        </div>
        <div class="form-group" style="text-align: center;"><textarea name="CDescription" cols="100" rows="6" style="font-size:16px" placeholder="活動內容" required></textarea></div>
        <div class="form-group" style="text-align: center;"><input style="font-size: 16px;width: 550px;" placeholder="活動連結" required name="CLink" /></div>

        <div class="form-group" style="text-align: center;margin:10px">
            <input style="margin:10px" type="submit" value="新增" class="btn btn-primary  btn-rounded btn-lg" />
            <input style="margin:10px" class="btn btn-warning  btn-rounded btn-lg" type="reset" value="重新設定" onclick="reset">
            <input style="margin:10px" class="btn btn-Silver  btn-rounded btn-lg" type="button" onclick="javascript:window.history.go(-1);" value="返回上一頁">
        </div>
    </form>
</div>

<script>
    function go() {
        $("#abc").click();
    }
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $("#_imgCgang").attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }

    } function reset() {
        $("#_imgCgang").src = "#";
    }

</script>