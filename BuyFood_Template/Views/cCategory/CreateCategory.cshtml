@model BuyFood_Template.ViewModels.CCategoryViewModel

@{
    Layout = "_LayoutAd";
}


<h4>新增產品類別</h4>
<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CCategoryName" class="control-label"></label>
                <input asp-for="CCategoryName" class="form-control" />
                <span asp-validation-for="CCategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="開始新增" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("返回產品類別列表", "CategoryList", new { }, new { @class = "btn btn-success" })
    <input type="button" class="btn btn-primary" value="Demo"
           onclick="(function () {
    document.getElementById('CCategoryName').value = '限時特價'
    document.getElementById('CPrice').value = '45'



                    })()" />

</div>

