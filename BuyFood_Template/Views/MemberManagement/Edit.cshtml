                <input asp-for="CGender" type="radio" value="男" />
                <label asp-for="CGender" class="control-label">男</label>
                <input asp-for="CGender" type="radio" value="女" />
                <label asp-for="CGender" class="control-label">女</label>
            </div>
            <div class="form-group">
                <label asp-for="CAddress" class="control-label"></label>
                <input asp-for="CAddress" class="form-control" />
                <span asp-validation-for="CAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CAge" class="control-label"></label>
                <input asp-for="CAge" type="date" class="form-control" />
                <span asp-validation-for="CAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CBlackList" class="control-label"></label>
                <input asp-for="CBlackList" class="form-control" />
                <span asp-validation-for="CBlackList" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="CDeposit" class="control-label"></label>
                <input asp-for="CDeposit" class="form-control" />
                <span asp-validation-for="CDeposit" class="text-danger">客戶的$$請勿亂改</span>
            </div>*@
            <div class="form-group">
                <label asp-for="CPhone" class="control-label"></label>
                <input asp-for="CPhone" class="form-control" />
                <span asp-validation-for="CPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPicture" class="control-label"></label>
                <img src="@Model.CPicture" width="100" height="100" />
                <input type="file" asp-for="image" />
                @*<input asp-for="CPicture" class="form-control" />*@
                <span asp-validation-for="CPicture" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="CFreezeCount" class="control-label"></label>
                    <input asp-for="CFreezeCount" class="form-control" />
                    <span asp-validation-for="CFreezeCount" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input type="submit" value="確認送出" class="btn btn-primary" /> 
                <a asp-action="List" class="btn btn-primary">回列表</a>
            </div>
        </form>
    </div>
</div>



