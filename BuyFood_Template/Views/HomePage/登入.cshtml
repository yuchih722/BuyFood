    <script>
        function memberLogin() {
            var loginMember = {};

            loginMember.CEmail = $("#iddemo").val();
            loginMember.CPassword = $("#passdemo").val();

            $.ajax({
                url: "/HomePage/loginCheck",
                type: "POST",
                data: JSON.stringify(loginMember),
                dataType: "Json",
                processData: false,
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data == "memberFrozed") {
                        alert("此帳號已被凍結 請聯絡客服人員");
                    }
                    else if (data == "FrozeComplete") {
                        alert("輸入密碼錯誤超過3次 凍結此帳號");
                    }
                    else if (data == "FrozeCountPlus") {
                        alert("密碼輸入錯誤 錯誤累計超過3次將凍結帳號");
                    }
                    else if (data == "noEmail") {
                        alert("無此帳號 請重新輸入");
                    }
                    else if (data == "notOpen") {
                        alert("此帳號尚未開通 請先開通帳號");
                    }
                    else if (data == "loginSuccess") {
                        alert("登入成功 將導回首頁");
                        window.location.assign("/HomePage/Home");
                    }
                    else {
                        alert("發生未知錯誤 請聯絡客服人員");
                    }
                } 

            });
        }
    </script>

